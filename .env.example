# OpenAI Configuration
KEYSTONE_OPENAI_API_KEY=sk-your-api-key-here

# Model Configuration
KEYSTONE_ORCHESTRATOR_MODEL=gpt-5-mini
KEYSTONE_SPECIALIST_MODEL=gpt-5-nano

# Storage Configuration
# Options: sqlite, dynamodb
KEYSTONE_STORAGE_BACKEND=sqlite

# AWS Configuration (only needed if using DynamoDB)
KEYSTONE_AWS_REGION=us-east-1
# AWS credentials should be configured via AWS CLI or environment variables
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Agent Configuration
KEYSTONE_MAX_RETRIES=1
KEYSTONE_RETRY_DELAY=0.5
KEYSTONE_HISTORY_LIMIT=5

# Token Limits (guidelines)
KEYSTONE_SPECIALIST_MAX_TOKENS=350
KEYSTONE_FINAL_MAX_TOKENS=700
